<idea-plugin>
  <id>com.yaniv.bsmchformat</id>
  <name>Basmach Standards Formatter</name>
  <version>1.0</version>
  <vendor email="tchstud21a4172@gmail.com">Yaniv Navon</vendor>

  <description>
    This helpful IntelliJ Plugin will fix and help students use the Basmach standards of Java code.
  </description>

  <change-notes>
    Change logs will be found here. No changes yet.
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <annotator language="JAVA" implementationClass="com.yaniv.bsmchformat.MyAnnotator"/>
    <fileDocumentManagerListener implementation="com.yaniv.bsmchformat.MySaveListener"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <project-components>
    <component>
      <implementation-class>com.yaniv.bsmchformat.CodeStyleSettingsInstaller</implementation-class>
    </component>
  </project-components>
</idea-plugin>